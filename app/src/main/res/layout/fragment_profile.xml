<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    tools:context=".Fragments.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="21sp"
            android:fontFamily="@font/sfbold"
            android:textColor="@color/txt_color"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_user_pic"
                android:layout_width="123dp"
                android:layout_height="116dp"
                android:contentDescription="@string/user_profile_str"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/ic_profile"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/edit_user_pic"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfbold"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfregular"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    />

                <android.widget.Button
                    android:id="@+id/edu_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_settings"
                    android:drawableEnd="@drawable/ic_edit"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/sfregular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Edit Profile"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/input_txt_color" />

                <android.widget.Button
                    android:id="@+id/edu_reset_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:textColor="@color/input_txt_color"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn_settings"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/sfregular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@drawable/reset"
                    />

                <android.widget.Button
                    android:id="@+id/edu_deactivate_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deactivate Account"
                    android:textColor="@color/input_txt_color"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn_settings"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/sfregular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@drawable/ic_delete"
                    />

                <android.widget.Button
                    android:id="@+id/edu_user_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/input_txt_color"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn_settings"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/sfregular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@drawable/ic_logout"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>